    public void addListener(ActionListener e) {
        btnLoginManager.addActionListener(e);
        btnCancelManager.addActionListener(e);
        jTextField1.addActionListener(e);
        jTextField2.addActionListener(e);
    }

    String user, pass;

    private class Controller implements ActionListener {

        private SistemLapangan sys;
        
        public Controller() {
            addListener(this);
        }
        
        public void setModel(SistemLapangan sys){
            this.sys = sys;
        }

        @Override
        public void actionPerformed(ActionEvent ae) {
            Object source = ae.getSource();
            if (source.equals(btnCancelManager)) {
                mu = new MenuUtama(sys);
                mu.setVisible(true);
                setVisible(false);
            } else if (source.equals(btnLoginManager)) {
                user = jTextField1.getText();
                pass = jTextField2.getText();
                if (user.equals("manager") && pass.equals("yangpunya")) {
                    mm = new MenuManager(sys);
                    mm.setVisible(true);
                    setVisible(false);
                } else {
                    JOptionPane.showMessageDialog(null, "Username atau Password salah" , "Warning" , JOptionPane.WARNING_MESSAGE);
                }
            }
        }
    }
}
