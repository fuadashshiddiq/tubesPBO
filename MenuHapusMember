    /**
     * @param args the command line arguments
     */

    public void addListener(ActionListener e) {
        btncancel.addActionListener(e);
        btnhapus.addActionListener(e);
    }

    private class Controller implements ActionListener {
        private SistemLapangan sys;
        public Controller() {
            addListener(this);
        }
        public void setModel(SistemLapangan sys) {
            this.sys=sys;
        }

        public void actionPerformed(ActionEvent ae) {
            Object source = ae.getSource();
            String idmem = tfhapusmember.getText();
            if (source.equals(btncancel)) {
                mp = new MenuPenjaga(sys);
                mp.setVisible(true);
                setVisible(false);
            } else if (source.equals(btnhapus)) {
                Member hapusmem = sys.cariMember(idmem);
                try {
                    if (hapusmem == null) {
                        JOptionPane.showMessageDialog(null, "ID Tidak Ada");
                    } else {
                        sys.removeMember(hapusmem);
                        JOptionPane.showMessageDialog(null, "member sudah dihapus");
                        mp = new MenuPenjaga(sys);
                        mp.setVisible(true);
                        setVisible(false);
                    }
                } catch (Exception e) {
                    JOptionPane.showMessageDialog(null, "Error pada Sistem");
                }
            }
        }
    }

