    // End of variables declaration//GEN-END:variables

    public void addListener(ActionListener e) {
        btnBack.addActionListener(e);
    }

    private class Controller implements ActionListener {

        private SistemLapangan sys;

        public Controller() {
            addListener(this);
        }

        public void setModel(SistemLapangan sys) {
            this.sys = sys;
        }

        @Override
        public void actionPerformed(ActionEvent ae) {
            Object source = ae.getSource();
            if (source.equals(btnBack)) {
                mm = new MenuManager(sys);
                mm.setVisible(true);
                setVisible(false);
            } else if (source.equals(btnSubmit)) {
                String namal = textNamaLap.getText();
                double hargal = Double.parseDouble(textHarga.getText());
                String jenisl = (String) cbJenis.getSelectedItem();
                l = new Lapangan(namal, jenisl, hargal);
                sys.addLapangan(l);
                JOptionPane.showMessageDialog(null, "Lapangan Berhasil di Tambahkan", "Information", JOptionPane.INFORMATION_MESSAGE);
                mm = new MenuManager(sys);
                mm.setVisible(true);
                setVisible(false);
            }
        }
    }
}
