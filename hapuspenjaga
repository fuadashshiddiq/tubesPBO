    private javax.swing.JLabel jLabel2;
    private javax.swing.JTextField textinputId;
    // End of variables declaration//GEN-END:variables

    public void addListener(ActionListener e) {
        btnBack.addActionListener(e);
        btnhapus.addActionListener(e);
    }

    private class Controller implements ActionListener {

        SistemLapangan sys;

        public Controller() {
            addListener(this);
        }

        public void setModel(SistemLapangan sys) {
            this.sys = sys;
        }

        @Override
        public void actionPerformed(ActionEvent ae) {
            Object source = ae.getSource();
            if (source.equals(btnBack)) {
                mm = new MenuManager(sys);
                mm.setVisible(true);
                setVisible(false);
            } else if (source.equals(btnhapus)) {
                String idlama = "";

                idlama = textinputId.getText();
                if (idlama.length() < 10 || idlama.length() > 10) {
                    JOptionPane.showMessageDialog(null, "ID penjaga Harus 10 Karakter", "Warning", JOptionPane.WARNING_MESSAGE);
                }
                p = sys.cariPenjaga(idlama);
                if (p != null) {
                    sys.removePenjaga(p);
                    JOptionPane.showMessageDialog(null, "Penjaga Berhasil dihapus", "WInformation", JOptionPane.INFORMATION_MESSAGE);
                    mm = new MenuManager(sys);
                    mm.setVisible(true);
                    setVisible(false);
                } else {
                    JOptionPane.showMessageDialog(null, "Penjaga tidak ditemukan", "Warning", JOptionPane.WARNING_MESSAGE);
                    mm = new MenuManager(sys);
                    mm.setVisible(true);
                    setVisible(false);
                }
            }
        }
    }
}
