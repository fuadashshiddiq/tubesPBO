    /**
     * @param args the command line arguments
     */
    public void addListener(ActionListener e) {
        btncancel.addActionListener(e);
        btnOK.addActionListener(e);
        btnedit.addActionListener(e);
        btncanceledit.addActionListener(e);
    }

    private class Controller implements ActionListener {

        private SistemLapangan sys;

        public Controller() {
            addListener(this);
        }

        public void setModel(SistemLapangan sys) {
            this.sys = sys;
        }

        public void actionPerformed(ActionEvent ae) {
            Object source = ae.getSource();
            jPanel1.setVisible(false);
            String idmem = tfEditMember.getText();
            if (source.equals(btncancel)) {
                mp = new MenuPenjaga(sys);
                mp.setVisible(true);
                setVisible(false);
            } else if (source.equals(btnedit)) {
                Member memcari = sys.cariMember(idmem);
                if (memcari == null) {
                    JOptionPane.showMessageDialog(null, "ID Tidak Ada");
                } else {
                    mp = new MenuPenjaga(sys);
                    jPanel2.setVisible(false);
                    jPanel1.setVisible(true);
                    mp.setVisible(false);
                }

            } else if (source.equals(btnOK)) {
                String idbaru = tfIdBaru.getText();
                String namabaru = tfNamaBAru.getText();
                sys.editMember(idmem, idbaru, namabaru);
                JOptionPane.showMessageDialog(null, "Data member telah diedit", "Information", JOptionPane.INFORMATION_MESSAGE);
                mp=new MenuPenjaga(sys);
                mp.setVisible(true);
            } else if (source.equals(btncanceledit)) {
                jPanel1.setVisible(false);
                jPanel2.setVisible(true);
            }
        }
    }
